<div class="container">
    <div class="row profile-header">
        <h3>Edit my profile</h3>
    </div>
        <hr>
        <div class="row">
            <div class="col s12 m3">
                <img class="circle responsive-img" src="{{data.image_url}}" alt="">
                <button class="btn blue" type="submit" name="change_photo">Change Photo</button>
                <form action='{{data.id}}/delete?_method=delete' method='post'>
                  <button class="btn red">Delete Account</button>
                </form>
            </div>
            <div class="col s12 m9">
                <form class="user-info" action="{{data.id}}/update" method="post">
                    <div class="input-field col s6">
                      <label for="first_name">First Name</label>
                      <input value="{{data.first_name}}" name="first_name" id="first_name" type="text">
                    </div>
                    <div class="input-field col s6">
                      <label for="last_name">Last Name</label>
                      <input value="{{data.last_name}}" name="last_name" id="last_name" type="text">
                    </div>
                    <div class="input-field col s12">
                      <label for="email">E-mail Address</label>
                      <input value="{{data.email}}" name="email" id="email" type="text">
                    </div>
                    <div class="col s6 center hidden">Update Password
                        <div class="input-field col s12">
                            <input name="password" placeholder= "Old Password" value="" id="current_password" type="password">
                        </div>
                        <div class="input-field col s12">
                          <input name="new_password" placeholder= "New Password" value="" id="new_password" type="password">
                        </div>
                        <div class="input-field col s12">
                            <input name="new_password_verify" placeholder= "Retype New Password" value="" id="retype_new_password" type="password">
                        </div>
                    </div>
                    <button class="btn red" type="reset" name="cancel">Cancel</button>
                    <button class="btn green" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
